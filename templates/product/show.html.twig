{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }}</td>
            </tr>
            <tr>
                <th>Barcode</th>
{#                <td>{{ barcode({code: product.name, type: 'c128', format: 'html'}) }}</td>#}
{#                <td>{{ barcode({code: product.name, type: 'qrcode', format: 'svg', width: 10, height: 10, color: 'green'}) }}</td>#}
                <td><img src="data:image/png;base64,{{ barcode({code: product.name, type: 'datamatrix', format: 'png', width: 10, height: 10, color: [127, 127, 127]}) }}" /></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_index') }}">back to list</a>

    <a href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
